{{#if this.showCard}}
  <AuCard @flex={{true}} @divided={{true}} @expandable={{true}} @shadow={{true}} @size="small" as |c|>
    <c.header>
      <AuHeading @level="3" @skin="6">
        Date
      </AuHeading>
    </c.header>
    <c.content>
      <DateTimePicker @onChange={{this.changeDate}} @value={{this.dateValue}} @onlyDate={{this.onlyDate}} />
      <AuButton {{on 'click' this.modifyDate}}>Insert Date</AuButton>
    </c.content>
  </AuCard>
{{/if}}
